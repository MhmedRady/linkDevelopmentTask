@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "Layout/_HorizontalLayout";
}

@section Styles
{
    <link rel="stylesheet" type="text/css" href="~/Admin/app-assets/css-ltr/pages/error.css">
}

<section class="flexbox-container" style="text-shadow: 1px 6px 3px #1113;">
    <div class="col-12 d-flex align-items-center justify-content-center">
        <div class="col-md-4 col-10 p-0">
            <div class="card-header bg-transparent border-0">
                <h2 class="error-code text-center mb-2">@ViewBag.statusCode</h2>
                <h3 class="text-uppercase text-center">@ViewBag.ErrorMessage</h3>
            </div>
            <div class="card-content">
                <div class="row py-2">
                    @if (ViewBag.statusCode == 403)
                    {
                        <div class="col-12 col-sm-6 col-md-6 mx-auto">
                            <a asp-action="Index" asp-controller="Home" asp-area="@(ViewBag.IsAdmin?"Admin":"")" class="btn btn-primary btn-block shadow" style="font-size: 1.2rem;"><i class="ft-home"></i> العودة الي الصفحة الرئيسية</a>
                        </div>
                    }
                    <div class="col-12 col-sm-6 col-md-6 mx-auto">
                        <a asp-action="Logout" asp-controller="Account" class="btn btn-danger btn-block shadow" style="font-size: 1.2rem;"><i class="ft-log-out"></i> تسجيل خروج </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
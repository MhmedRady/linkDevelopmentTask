 @model NewProject.Application.CreateJobTitleInputDto; 
@{
    ViewData["Title"] = $"Edit {@Model.Name??""}";
    ViewBag.action = "Update";
    Layout = "Layout/_CardView";
}
 
<form id="formContent" class="form row"
       asp-action="Update" asp-route-id="@ViewBag.jobTitleId"
       method="post" enctype="multipart/form-data">
     
     <div class="row ml-0 w-100">
         <h4 class="col-12 form-section"><i class="ft-clipboard" style="font-size: 2rem;"></i> JobTitle info </h4>
         <div class="form-group col-md-5 mb-2">
             <lable class="form-lable req fw-bold mb-50 d-block"> Name </lable>
             <input class="form-control" type="text" asp-for="Name"/>
         </div>
         <div class="form-group col-md-5 mb-2">
             <lable class="form-lable req fw-bold mb-50 d-block"> Job Category Name </lable>
             <input class="form-control" type="text" asp-for="JobCategory"/>
         </div>
     </div>

     <div class="row ml-0 w-100">
         <h4 class="col-12 form-section"><i class="la la-calendar-o" style="font-size: 2.5rem;"></i>Validity Duration </h4>
         <div class="form-group col-md-5 mb-2">
             <lable class="form-lable req fw-bold mb-50 d-block"> Start Date </lable>
             <input type="date" class="form-control" id="StartDateTime" asp-for="ValidityDuration.From">
         </div>

         <div class="form-group col-md-5 mb-2">
             <lable class="form-lable fw-bold mb-50 d-block">End Date</lable>
             <input type="date" class="form-control" id="EndDateTime" asp-for="ValidityDuration.To">
         </div>
     </div>

     <div class="row ml-0 w-100">
         <h4 class="col-12 form-section"><i class="ft-clipboard" style="font-size: 2rem;"></i>Requirements Info </h4>
         <div class="form-group col-md-5 mb-2">
             <lable class="form-lable fw-bold mb-50 d-block">Maximum Applications</lable>
             <input type="text" class="touchspin" asp-for="MaximumApplications" data-bts-postfix="<i class='ft-users'></i>" value="10" minlength="1"/>
         </div>

         <div class="form-group col-md-5 mb-2">
             <lable class="form-lable fw-bold mb-50 d-block">Skills</lable>
             <input class="form-control" type="text" id="tag-input1" asp-for="_Skills" value="@Model._Skills">
         </div>
        
         <div class="form-group col-md-6 mb-2">
             <lable class="form-lable fw-bold mb-50 d-block">Job Description</lable>
             <textarea asp-for="Description" class="form-control summernote" rows="10" id="Description" style="height: 200px">
                @Model.Description
            </textarea>
         </div>

         <div class="form-group col-md-6 mb-2">
             <lable class="form-lable fw-bold mb-50 d-block">Job Responsibilities</lable>
             <textarea asp-for="Responsibilities" class="form-control summernote" rows="10" id="Responsibilities" style="height: 200px">
                 @Model.Description
             </textarea>
         </div>

     </div>
     
    <div class="form-group col-12 mb-2">
        <fieldset>
            <div class="float-left">
                <button id="formContentSubmit" type="submit" class="btn btn-primary"> <i class="la la-save"></i> Submit</button>
            </div>
        </fieldset>
    </div>
 </form>
 @section Styles
{
    <link rel="stylesheet" type="text/css" href="~/Admin/app-assets/vendors/css/forms/spinner/jquery.bootstrap-touchspin.css">
    <link rel="stylesheet" type="text/css" href="~/admin/app-assets/vendors/css/extensions/sweetalert.css">
    <link rel="stylesheet" type="text/css" href="~/Admin/app-assets/vendors/css/editors/summernote.css">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/app-assets/js/scripts/TagsInput.js" type="text/javascript"></script>
    <script src="~/Admin/app-assets/js/core/libraries/jquery_ui/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/Admin/app-assets/vendors/js/forms/repeater/jquery.repeater.min.js"
            type="text/javascript"></script>
    <script src="~/admin/app-assets/vendors/js/extensions/sweetalert.min.js" type="text/javascript"></script>

    <script src="~/Admin/app-assets/vendors/js/forms/spinner/jquery.bootstrap-touchspin.js"
            type="text/javascript"></script>
    <script src="~/Admin/app-assets/js/scripts/forms/input-groups.js" type="text/javascript"></script>
    <script src="~/Admin/app-assets/vendors/js/editors/summernote/summernote.js"
